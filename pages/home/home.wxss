/* pages/home/home.wxss */
page {
  background-color: #eee;
}
/* 轮播图 */
.header {
  position: relative;
  width: 100vw;
  height: 56.25vw;
  background-color: #ddd;
}

.header .swiper {
  width: 100vw;
  height: 56.25vw;
}

.header .swiper .slide-image {
  width: 100vw;
  height: 56.25vw;
}

/* 标题 */
.titleText {
  font-size: 32rpx;
  border-left: 5rpx solid #2a9f93;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  padding-left: 20rpx;
}

/* 四分导航 */
.classification{
  /* width:100vw; */
  height:170rpx;
  padding:0 37rpx 0 12rpx;
  overflow-x: auto; 
  background-color:#fff; 
  border-bottom:10rpx solid #f8f8f8;

  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.classification view{
  position: relative;/* formID按钮父元素 */
  min-width:150rpx;
  height:150rpx;
  margin-left:25rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.classification image{
  width:65rpx;
  height:65rpx;
  /* border-radius: 70rpx; */
}
.classification text{
  font-weight: bold;
  width:150rpx;
  height:40rpx;
  line-height:40rpx;
  margin:10rpx 0 0 0;
  font-size: 28rpx;
  text-align: center;
  color:#999;
}

/* 选择社区出现轮播图 */
.choose-banner {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 5rpx;
  background-color: #fff;
}

.choose-banner text {
  font-size: 26rpx;
}

.choose-banner .input {
  width: 580rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 26rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  padding: 10rpx;
  margin-right: 10rpx;
  background-color: #fff;
}

.choose-banner button {
  position: relative;
  width: 160rpx;
  /* height: 44rpx; */
  line-height: 44rpx;
  font-size: 26rpx;
  padding: 10rpx;
  border-radius: 10rpx;
  background-color: #2a9f93;
  color: #fff;
}

.choose-banner image {
  position: absolute;
  top: 22%;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  transform: rotate(90deg);
}

.sel_box {
  display: flex;
  flex-wrap: wrap;
}

.content_box {
  margin: 0 10rpx 10rpx;
  width: 47%;
  background-color: #fff;
  /* border-radius: 20rpx; */
}

.content_box .title {
  font-size: 24rpx;
  margin: 0 20rpx 20rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.content_box image {
  width: 315rpx;
  height: 220rpx;
  margin: 20rpx 20rpx;
}

.classification .tips_box {
  width: 100%;
}

.classification .tips_box .title {
  padding: 20rpx;
  text-align: center;
}

.tips_box .title {
  padding: 20rpx;
  text-align: center;
}