/* pages/home/home.wxss */
/* 轮播图 */
.header {
  position: relative;
  width: 100vw;
  height: 56.25vw;
  background-color: #ddd;
}

.header .swiper {
  width: 100vw;
  height: 56.25vw;
}

.header .swiper .slide-image {
  width: 100vw;
  height: 56.25vw;
}

/* 标题 */
.titleText {
  font-size: 32rpx;
  border-left: 5rpx solid #2a9f93;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  padding-left: 20rpx;
}

/* 四分导航 */
.classification{
  /* width:100vw; */
  height:170rpx;
  padding:0 37rpx 0 12rpx;
  overflow-x: auto; 
  background-color:#fff; 
  border-bottom:10rpx solid #f8f8f8;

  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.classification view{
  position: relative;/* formID按钮父元素 */
  min-width:150rpx;
  height:150rpx;
  margin-left:25rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.classification image{
  width:65rpx;
  height:65rpx;
  /* border-radius: 70rpx; */
}
.classification text{
  font-weight: bold;
  width:150rpx;
  height:40rpx;
  line-height:40rpx;
  margin:10rpx 0 0 0;
  font-size: 28rpx;
  text-align: center;
  color:#999;
}