page {
  background-color: #eee;
}

.list-box {
  margin: 20rpx;
}

.list-box .item {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.list-box .item .title {
  display: flex;
  margin-bottom: 20rpx;
}

.list-box .item .title .name {
  width: 70%;
  font-weight: 700;
}

.list-box .item .title .money {
  width: 30%;
  color: #2a9f93;
  text-align: right;
}

.list-box .item .info {
  margin: 30rpx 0;
  font-size: 24rpx;
}

.list-box .item .info text {
  text-align: center;
  margin-right: 20rpx;
  padding: 10rpx 20rpx;
  background-color: #eee;
}

.list-box .item .intro {
  margin-bottom: 20rpx;
}

.list-box .item .member {
  display: flex;
  align-items: center;
}

.list-box .item .member image {
  width: 50rpx;
  height: 50rpx;
  display: block;
  border-radius: 50%;
  margin: 20rpx 0;
}

.list-box .item .member view {
  margin-left: 20rpx;
  font-size: 24rpx;
}