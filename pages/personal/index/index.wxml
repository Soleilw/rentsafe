<!--pages/personal/index/index.wxml-->
<view class="box">
	<view class="user" wx:if="{{userInfo}}">
		<image class="avator" src="{{userInfo.avatarUrl}}" style="border:8rpx solid #fff;"></image>
		<text class="nickname">{{userInfo.nickName}}</text>
	</view>
	<view class="user" wx:else>
		<image class="avator" src="/icon/qb.png" style="border:8rpx solid #999;"></image>
		<button class="login-btn" size="mini" open-type="getUserInfo" bindgetuserinfo="getUserInfo">立即登录</button>
	</view>
</view>

<view class="plate">
	<view class="title">信息板块</view>
	<view class="list">
		<view bindtap="toInfomation">
			<image src="/icon/information.png" />
			<text>个人信息</text>
		</view>
		<view bindtap="toHouse">
			<image src="/icon/unit.png" />
			<text>房屋管理</text>
		</view>
		<view bindtap="callPhone">
			<image src="/icon/alert.png" />
			<text>一键报警</text>
		</view>
	</view>
</view>

