page {
    /* min-height: 100vh; */
    background: #f0f0f0;
    color: #666;
}

.box {
    height: 35vw;
    margin: 10rpx 10rpx 0 10rpx;
    border-radius: 10rpx;
    background-color: #2a9f93;
}

.change {
    position: absolute;
    right: 10rpx;
    margin-top: 10rpx;
    padding: 10rpx 20rpx;
    border: 1rpx solid #ccc;
    border-right: none;
    border-radius: 10rpx 0 0 10rpx;
    color: #fff;
    font-size: 26rpx;
}

.user {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.nickname {
    color: #fff;
}

.avator {
    width: 100rpx;
    height: 100rpx;
    margin: 20rpx;
    border: 2rpx solid #fff;
    border-radius: 50%;
}

/* 板块 */
.plate {
    margin: 20rpx 0;
    color: #272727;
}

.plate .title {
    padding: 15rpx 0 15rpx 20rpx;
    font-size: 32rpx;
    background: #fff;
}

.plate .list {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: center;
}

.plate .list view {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 24vw;
    min-width: 23vw;
    height: 20vw;
    margin: .5vw .5vw 0 .5vw;
    background: #fff;
}

.plate .list image {
    width: 60rpx;
    height: 60rpx;
}

.plate .list text {
    /* width: 160rpx;
    height: 50rpx; */
    line-height: 50rpx;
    margin: 10rpx 0 0 0;
    font-size: 30rpx;
    text-align: center;
}

/* 技术支持文字 */
.supportText {
    position: fixed; 
    bottom: 0;
    width: 100%;
    line-height: 80rpx;
    text-align: center;
    font-size: 25rpx;
    color: #aaa;
}

.tips {
    font-size: 24rpx;
    text-align: center;
    color: red;
    padding: 10rpx;
}

/*使屏幕变暗 */
.commodity_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.8;
    overflow: hidden;
    z-index: 1000;
    color: #fff;
  }
  
  /*对话框 */
  .commodity_attr_box {
    width: 100%;
    overflow: hidden;
    position: fixed;
    bottom: 280rpx;
    left: 0;
    z-index: 2000;
    padding-top: 20rpx;
    display: flex;
    justify-content: center;
    color: #fff;
  }
  
  .guan {
    font-size: 24rpx;
  }
  
  .fon {
    font-size: 24rpx;
  }
  
  .line {
    line-height: 60rpx;
  }
  
  .guanyu {
